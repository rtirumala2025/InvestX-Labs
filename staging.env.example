# ============================================================================
# STAGING ENVIRONMENT CONFIGURATION
# ============================================================================
# Copy this file to .env.staging in the appropriate directories
# and fill in with REAL staging credentials

# ============================================================================
# Frontend Staging Environment Variables
# ============================================================================
# Set these in your staging hosting provider (Vercel/Netlify) dashboard

REACT_APP_SUPABASE_URL=https://your-staging-project.supabase.co
REACT_APP_SUPABASE_ANON_KEY=your_staging_supabase_anon_key
REACT_APP_BACKEND_URL=https://staging-backend.railway.app
REACT_APP_ALPHA_VANTAGE_API_KEY=your_alpha_vantage_demo_key
REACT_APP_OPENROUTER_API_KEY=your_openrouter_api_key
REACT_APP_ENVIRONMENT=staging
REACT_APP_APP_NAME=InvestX Labs (Staging)

# ============================================================================
# Backend Staging Environment Variables
# ============================================================================
# Set these in your staging hosting provider (Railway/Render) dashboard

PORT=5001
NODE_ENV=staging
FRONTEND_URL=https://staging-frontend.vercel.app
APP_URL=https://staging-frontend.vercel.app

# Supabase (REAL staging project)
SUPABASE_URL=https://your-staging-project.supabase.co
SUPABASE_ANON_KEY=your_staging_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_staging_supabase_service_key
SUPABASE_SERVICE_KEY=${SUPABASE_SERVICE_ROLE_KEY}

# Alpha Vantage (Demo key for staging)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_demo_key

# OpenRouter (for AI features)
OPENROUTER_API_KEY=your_openrouter_api_key

# MCP Configuration
MCP_PORT=3002
MCP_ENABLED=false

